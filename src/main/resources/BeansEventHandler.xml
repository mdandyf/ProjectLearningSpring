<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id = "helloWorld" class = "com.spring.model.HelloWorld">
        <property name = "message" value = "Hello World!"/>
    </bean>

    <bean id = "cStartEventHandler" class = "com.spring.xmlbased.eventhandling.CStartEventHandler"/>
    <bean id = "cStopEventHandler" class = "com.spring.xmlbased.eventhandling.CStopEventHandler"/>

</beans>